<h2>New Podcast Form</h2>

<ul>
  <%@podcast.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  </ul>
<%end%>

<%= form_for(@podcast) do |f|%>

<div>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :publisher %><br />
  <%= f.text_field :publisher %>
</div>

<div>
  <%= f.label :description %><br />
  <%= f.text_field :description %>
</div>

<div>
  <%= f.label :link %><br />
  <%= f.text_field :link %>
</div>

<div>
  <%= f.submit "Add Podcast" %>
</div>
<%end%>
